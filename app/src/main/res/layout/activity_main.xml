<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:id="@+id/id_activity_portrait"
    android:baselineAligned="false">

    <fragment
        android:id="@+id/id_fraglist_in_activitymain"
        android:name="msrit.santhosh.fragment1.fragment_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_fragment_list" />

    <fragment
        android:id="@+id/id_fragdetails_in_activitymain"
        android:name="msrit.santhosh.fragment1.fragment_detail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_fragment_detail" />
</LinearLayout>